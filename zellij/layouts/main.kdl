layout {
    default_tab_template {
        pane size=1 borderless=true {
            plugin location="zellij:compact-bar" 
        }
        children
        pane size=1 borderless=true {
            plugin location="file:~/.local/zellij/plugins/zjstatus.wasm" {
                format_left  "{command_git_branch}"
                format_right "{command_twn} | {command_twt}"
                format_space " "

                border_enabled  "false"
                border_char     "─"
                border_format   "#[fg=#6C7086]{char}"
                border_position "top"

                hide_frame_for_single_pane "true"

                mode_normal  "#[bg=blue] "
                mode_tmux    "#[bg=#ffc387] "

                tab_normal   "#[fg=#6C7086] {name} "
                tab_active   "#[fg=#9399B2,bold,italic] {name} "

                command_git_branch_command     "git rev-parse --abbrev-ref HEAD"
                command_git_branch_format      "#[fg=blue] {stdout} "
                command_git_branch_interval    "10"
                command_git_branch_rendermode  "dynamic"

                command_twn_command     "/home/kryses/scripts/productivity/tw-current-task.sh"
                command_twn_format      "#[fg=blue]  {stdout} "
                command_twn_interval    "1"
                command_twn_render_mode "dynamic"

                command_twt_command     "/home/kryses/scripts/productivity/tw-current-time.sh"
                command_twt_format      "#[fg=blue] 󱑆 {stdout} "
                command_twt_interval    "1"
                command_twt_render_mode "dynamic"

                datetime        "#[fg=#6C7086,bold] {format} "
                datetime_format "%A, %d %b %Y %H:%M"
                datetime_timezone "Europe/Berlin"
            }
        }

    }
    pane_template name="nnn-sidebar" {
        pane size="15%" split_direction="vertical" command="nnn"
    }
    tab name="Home" focus=true {
        pane split_direction="vertical" {
            pane command="vit"
            pane command="task" {
                args "burndown.daily"
            }
        }
    }
    tab name="Shell" {
        pane split_direction="vertical" {
            nnn-sidebar size="15%"
            pane focus=true
        }
    }
    tab name="Dev" {
        pane split_direction="vertical" {
            nnn-sidebar size="15%"
            pane {
                pane command="nvim" focus=true
                pane size="20%" split_direction="vertical" {
                    pane 
                    pane
                }
            }
            pane size="20%" {
                command "ollama"
                args "run" "asistant"
            }
        }
    }
    tab name="Config" {
        pane split_direction="vertical" {
            pane size="15%" command="nnn" {
                args "/home/kryses/dotfiles"
                cwd "/home/kryses/dotfiles"
            }
            pane focus=true command="nvim" {
                cwd "/home/kryses/dotfiles"
            }

        }
    }
    tab name="System" {
        pane command="htop" focus=true
    }
}
